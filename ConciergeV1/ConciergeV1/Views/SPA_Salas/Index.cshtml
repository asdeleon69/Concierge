@model IEnumerable<ConciergeV1.Models.SPA_Salas>

@{
    ViewBag.Title = "Salas";
}

<h2>Salas</h2>

<p>
    @Html.ActionLink("Agregar nuevo registro", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Descripción")
        </th>
        <th>
            @Html.DisplayName("Caracteristicas")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DesSala)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CarSala)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.CodSala.Trim() }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.CodSala.Trim() }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.CodSala.Trim() })
        </td>
    </tr>
}

</table>
