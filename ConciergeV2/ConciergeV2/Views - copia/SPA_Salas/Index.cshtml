@model IEnumerable<ConciergeV2.Models.SPA_Salas>

@{
    ViewBag.Title = "Index";
}

    <section class="content-header">
        <h2>Salas spa</h2>
    </section>

    <section class="content container-fluid">
        <p>
            <i class="fas fa-file"></i>
            @Html.ActionLink("Agregar nuevo registro", "Create")
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.DesSala)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CarSala)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.DesSala)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CarSala)
                    </td>
                    <td>
                        <i class="fas fa-edit"></i>
                        @Html.ActionLink("Editar", "Edit", new { id = item.CodSala.Trim() }) |
                        <i class="fas fa-trash-alt"></i>
                        @Html.ActionLink("Eliminar", "Delete", new { id = item.CodSala.Trim() })
                    </td>
                </tr>
            }

        </table>
    </section>