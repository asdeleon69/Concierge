@model ConciergeV2.Models.User
@{
    ViewBag.Title = "Login";
}

<div class="content container-fluid">
    @using (Html.BeginForm("Login", "Home", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Ingrese sus datos</h3>
                    </div>
                    <div class="panel-body">
                        <fieldset>
                            @if (@ViewBag.Message != null)
                            {
                                <div class="alert alert-warning" style="border: 1px solid red">
                                    @ViewBag.Message
                                </div>
                            }
                            <div class="form-group">
                                @Html.TextBoxFor(a => a.Usuario, htmlAttributes: new { @class = "form-control", @placeholder = "Usuario" })
                                @Html.ValidationMessageFor(a => a.Usuario)
                                @*<input class="form-control" placeholder="Usuario" name="usuario" type="text" autofocus id="txtUsuario">*@
                            </div>
                            <div class="form-group">
                                @Html.PasswordFor(a => a.Password, htmlAttributes: new { @class = "form-control", @placeholder = "Password" })
                                @Html.ValidationMessageFor(a => a.Password)
                                @*<input class="form-control" placeholder="Password" name="password" type="password" id="txtPassword">*@
                            </div>
                            <!-- Change this to a button or input when using this as a form -->
                            <button id="btnIngresar" class="btn btn-lg btn-success btn-block">Ingresar</button>
                        </fieldset>
                    </div>
                </div>
            </div>
        </div>
    </div>
    }
</div>