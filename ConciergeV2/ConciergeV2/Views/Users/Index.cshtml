@model IEnumerable<ConciergeV2.Models.User>

@{
    ViewBag.Title = "Index";
}
<div class="content-header">
    <h2>Mantenimiento Usuarios</h2>
</div>

<div class="content container-fluid">
    <p>
        <i class="fas fa-file"></i>
        @Html.ActionLink("Agregar nuevo registro", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Usuario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Activo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nivel)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Usuario)
                </td>
                <td>
                    @Html.ValueFor(modelItem => item.Activo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nivel)
                </td>
                <td>
                    <i class="fas fa-edit"></i>
                    @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                    <i class="fas fa-edit"></i>
                    @Html.ActionLink("Editar Password", "EditPassword", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
</div>