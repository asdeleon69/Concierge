@model ConciergeV2.Models.SPA_Servicios

@{
    ViewBag.Title = "Edit";
}

<section class="content-header">
    <h2>Editar</h2>
</section>

<section class="content container-fluid">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Servicio spa</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.CodSer)

            <div class="form-group">
                <div class="col-md-12">
                    @Html.LabelFor(model => model.NomSer, htmlAttributes: new { @class = "control-label" })
                    <br />
                    @Html.EditorFor(model => model.NomSer, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NomSer, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-12">
                    @Html.LabelFor(model => model.DesSer, htmlAttributes: new { @class = "control-label" })
                    <br />
                    @Html.EditorFor(model => model.DesSer, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DesSer, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-12">
                    @Html.LabelFor(model => model.DurSer, htmlAttributes: new { @class = "control-label" })
                    <br />
                    @Html.EditorFor(model => model.DurSer, new { htmlAttributes = new { @class = "form-control", @type = "time" } })
                    @Html.ValidationMessageFor(model => model.DurSer, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-12">
                    @Html.LabelFor(model => model.PreSer, htmlAttributes: new { @class = "control-label" })
                    <br />
                    @Html.EditorFor(model => model.PreSer, new { htmlAttributes = new { @class = "form-control", @type = "number", @min = "1.00", @step = "any" } })
                    @Html.ValidationMessageFor(model => model.PreSer, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Guardar" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Regresar atrás", "Index")
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</section>